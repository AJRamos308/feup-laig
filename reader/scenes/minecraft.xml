<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>
    <translation x="-1" y="1" z="0" />
    <rotation axis="x" angle="0" />
    <rotation axis="y" angle="0" />
    <rotation axis="z" angle="0" />
    <scale sx="0.25" sy="0.25" sz="0.25" />
    <reference length="5" />
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />
    <background r="0" g="0" b="0" a="1" />
</ILLUMINATION>


<!-- Lights -->
<LIGHTS>
	<LIGHT id="light0">
        <enable value ="1" />
        <position  x="0" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light1">
        <enable value ="1" />
        <position x="30" y="10" z="0" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

	<LIGHT id="light2">
        <enable value ="1" />
        <position x="0" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />
    </LIGHT>

    <LIGHT id="light3">
        <enable value ="1" />
        <position x="30" y="10" z="20" w="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
        <diffuse r="0.6" g="0.6" b="0.6" a="1.0" />
        <specular r="0.6" g="0.6" b="0.6" a="1.0" />
    </LIGHT>

</LIGHTS>

<!-- Textures -->
<TEXTURES>
    <!-- Minecraft Dirt Block sides-->
    <TEXTURE id="minecraft_dirt_side">
        <file path="images/minecraft_dirt_side.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <!-- Minecraft Dirt Block Top = Grass -->
    <TEXTURE id="minecraft_dirt_top">
        <file path="images/minecraft_dirt_top.jpg" />
        <amplif_factor s="2" t="2" />
    </TEXTURE>

    <!-- Minecraft Dirt Block Bottom -->
    <TEXTURE id="minecraft_dirt_bottom">
        <file path="images/minecraft_dirt_bottom.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

	<!-- Tree trunk -->
    <TEXTURE id="trunk">
        <file path="images/trunk-image.jpg" />
        <amplif_factor s="2" t="2" />
    </TEXTURE>

     <!-- Tree leaves -->
    <TEXTURE id="folhas">
        <file path="images/leaves.jpg" />
        <amplif_factor s="3" t="4" />
    </TEXTURE>

    <!-- Rocks -->
    <TEXTURE id="rocks">
        <file path="images/rocks.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

    <!-- Glass work -->
    <TEXTURE id="vidral">
        <file path="images/vidral.jpg" />
        <amplif_factor s="15" t="10" />
    </TEXTURE>

    <!-- Street bench -->
    <TEXTURE id="banco">
        <file path="images/bank.jpg" />
        <amplif_factor s="1" t="1" />
    </TEXTURE>

</TEXTURES>


<MATERIALS>
	<!-- Minecraft dirt block material -->
    <MATERIAL id="minecraftDirtMaterial">
        <shininess value="1" />
        <specular r="0.2" g="0.2" b="0.2" a="1" />
        <diffuse r="0.2" g="0.2" b="0.2" a="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

	<!-- Pyramid material -->
    <MATERIAL id="piramideMaterial">
        <shininess value="1" />
        <specular r="0" g="0" b="0" a="1" />
        <diffuse r="1.0" g="0.68" b="0.4" a="1" />
        <ambient r="0.2" g="0.2" b="0.2" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

	<!-- Tree leaves material -->
	<MATERIAL id="leavesTreeMaterial">
        <shininess value="1" />
        <specular r="0.2" g="0.2" b="0.2" a="1" />
        <diffuse r="0.0" g="0.207" b="0.0" a="1" />
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

	<!-- Tree trunk material -->
	<MATERIAL id="trunkTreeMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.6" g="0.298" b="0.0" a="1" />
        <ambient r="0.1" g="0.1" b="0.1" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- Lamp post material -->
    <MATERIAL id="lightPostMaterial">
        <shininess value="100" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.447" g="0.416" b="0.416" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- Light bulb material -->
    <MATERIAL id="lightMaterial">
        <shininess value="100" />
        <specular r="0.5" g="0.5" b="0.5" a="1" />
        <diffuse r="0.5" g="0.5" b="0.5" a="1" />
        <ambient r="0.0" g="0.0" b="0.0" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

    <!-- A default material -->
    <MATERIAL id="defaultMaterial">
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />
        <ambient r="0.4" g="0.4" b="0.4" a="1" />
        <emission r="0.0" g="0.0" b="0.0" a="1" />
    </MATERIAL>

</MATERIALS>


<!-- The leaves -->
<LEAVES>
</LEAVES>


<!-- The nodes -->
<NODES>

    <ROOT id="root" />

    <!-- The root node -->
    <NODE id="root">
        <MATERIAL id="defaultMaterial" />
        <TEXTURE id="null" />
        <DESCENDANTS>
            <NODEREF id="minecraftDirtBlockGrasssGrass" />
            <NODEREF id="luzes" />
            <NODEREF id="chao" />
        </DESCENDANTS>
    </NODE>

    <!--the minecraftDirtBlockGrasssGrass -->
    <NODE id="minecraftDirtBlockGrasssGrass">
        <MATERIAL id="null" />
        <TEXTURE id="clear" />
        <DESCENDANTS>
            <NODEREF id="minecraftDirtBlockGrass1" />
            <NODEREF id="minecraftDirtBlockGrass2" />
        </DESCENDANTS>
    </NODE>

    <!-- Dirt Block 1 -->
    <NODE id="minecraftDirtBlockGrass1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="-2" y="-4" z="5" />
        <DESCENDANTS>
            <NODEREF id="minecraftDirtBlockGrass" />
        </DESCENDANTS>
    </NODE>
    <!-- Dirt Block 2 -->
    <NODE id="minecraftDirtBlockGrass2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />
        <TRANSLATION x="22" y="-4" z="5" />
        <DESCENDANTS>
            <NODEREF id="minecraftDirtBlockGrass" />
        </DESCENDANTS>
    </NODE>

    <!-- Generic Dirt Block -->
    <NODE id="minecraftDirtBlockGrass">
        <MATERIAL id="minecraftDirtMaterial" />
        <TEXTURE id="null" />
        <DESCENDANTS>
       		<NODEREF id="dirtBlockGrassFace1" />
            <NODEREF id="dirtBlockGrassFace2" />
            <NODEREF id="dirtBlockGrassFace3" />
            <NODEREF id="dirtBlockGrassFace4" />
            <NODEREF id="dirtBlockGrassFace5" />
            <NODEREF id="dirtBlockGrassFace6" />
        </DESCENDANTS>
    </NODE>

    <!-- dirt block face 1 side -->
    <NODE id="dirtBlockGrassFace1">
        <MATERIAL id="null" />
        <TEXTURE id="minecraft_dirt_side" />
        <TRANSLATION x="2.5" y="4" z="7.5" />
        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>

    </NODE>
    <!-- dirt block face 2 side -->
     <NODE id="dirtBlockGrassFace2">
        <MATERIAL id="null" />
        <TEXTURE id="minecraft_dirt_side" />
        <TRANSLATION x="2.5" y="4" z="2.5" />
		<ROTATION axis="y" angle="-90" />
        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>
    </NODE>
    <!-- dirt block face 3 side -->
    <NODE id="dirtBlockGrassFace3">
        <MATERIAL id="null" />
        <TEXTURE id="minecraft_dirt_side" />
        <TRANSLATION x="7.5" y="4" z="7.5" />
		<ROTATION axis="y" angle="90" />
        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>
    </NODE>
    <!-- dirt block face 4 side -->
    <NODE id="dirtBlockGrassFace4">
        <MATERIAL id="null" />
        <TEXTURE id="minecraft_dirt_side" />
        <TRANSLATION x="7.5" y="4" z="2.5" />
        <ROTATION axis="y" angle="180" />
        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>
    </NODE>
    <!-- dirt block face 5 top -->
    <NODE id="dirtBlockGrassFace5">
        <MATERIAL id="null" />
        <TEXTURE id="minecraft_dirt_top" />
        <ROTATION axis="x" angle="-90" />
        <TRANSLATION x="2.5" y="-7.5" z="8" />
        <SCALE sx="1" sy="1.25" sz="1" />
        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 4 5 0" />
       </DESCENDANTS>
    </NODE>
    <!-- dirt block face 6 bottom -->
    <NODE id="dirtBlockGrassFace6">
        <MATERIAL id="null" />
        <TEXTURE id="minecraft_dirt_bottom" />
        <TRANSLATION x="2.5" y="4" z="2.5" />
        <ROTATION axis="x" angle="90" />
        <SCALE sx="1" sy="1.25" sz="1" />
        <DESCENDANTS>
            <LEAF  type="rectangle" args="0 4 5 0" />
        </DESCENDANTS>
    </NODE>















    <!-- The floor -->
    <NODE id="chao">
        <MATERIAL id="null" />
        <TEXTURE id="rocks" />

        <SCALE sx="6" sy="1" sz="5" />
        <TRANSLATION x="0" y="0" z="4" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
					<LEAF  type="rectangle" args="0 4 5 0" />
				</DESCENDANTS>

    </NODE>

    <!-- The lights -->
     <NODE id="luzes">
        <MATERIAL id="lightMaterial" />
        <TEXTURE id="clear" />

        <DESCENDANTS>
            <NODEREF id="luz1" />
            <NODEREF id="luz2" />
            <NODEREF id="luz3" />
            <NODEREF id="luz4" />
        </DESCENDANTS>

    </NODE>

    <!-- The first light -->
     <NODE id="luz1">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
            <NODEREF id="luz_candeeiro" />
        </DESCENDANTS>

    </NODE>

    <!-- The second light -->
    <NODE id="luz2">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="30" y="0" z="0" />

        <DESCENDANTS>
            <NODEREF id="luz_candeeiro" />
        </DESCENDANTS>

    </NODE>

    <!-- The third light -->
    <NODE id="luz3">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="0" z="20" />

        <DESCENDANTS>
           <NODEREF id="luz_candeeiro" />
        </DESCENDANTS>

    </NODE>

    <!-- The fourth light -->
    <NODE id="luz4">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="30" y="0" z="20" />

        <DESCENDANTS>
           <NODEREF id="luz_candeeiro" />
        </DESCENDANTS>

    </NODE>

    <!-- Lamp post -->
    <NODE id="luz_candeeiro">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <DESCENDANTS>
           <NODEREF id="luz_esfera" />
           <NODEREF id="luz_suporte" />
        </DESCENDANTS>

    </NODE>

    <!-- Light bulb -->
    <NODE id="luz_esfera">
        <MATERIAL id="null" />
        <TEXTURE id="null" />

        <TRANSLATION x="0" y="10" z="0" />
        <SCALE sx="-1" sy="1" sz="1" />

        <DESCENDANTS>
						<LEAF id="sphere1" type="sphere" args="2 20 20" />

        </DESCENDANTS>

    </NODE>

    <!-- The post in the lamp post... -->
    <NODE id="luz_suporte">
        <MATERIAL id="lightPostMaterial" />
        <TEXTURE id="null" />

        <SCALE sx="0.5" sy="2.02" sz="0.5" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
					<LEAF id="cylinder1" type="cylinder" args="4 1 1 20 20" />
        </DESCENDANTS>

    </NODE>


</NODES>

</SCENE>